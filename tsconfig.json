{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": true /* Allow javascript files to be compiled. */,
    "checkJs": false /* Report errors in .js files. */,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "types": ["jest"]
  },
  "exclude": ["dist"],
  "include": [
    "src",
  ],
  "types": ["src/types"],
  "lib":["dom","es2017"],
}
